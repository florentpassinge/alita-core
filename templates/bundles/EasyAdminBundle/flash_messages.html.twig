{% if app.session is not null and app.session.started %}
    {% set flash_messages = app.session.flashbag.all %}

    {% if flash_messages|length > 0 %}
        {% for label, messages in flash_messages %}
            {% for message in messages %}
                <div class="alert-container alert alert-dismissible fade show alert-{{ label }} fixed-top m-5 w-50 mr-auto ml-auto">
                    <div class="container container-left">
                        <span class="far fa-check-circle"></span>
                    </div>
                    <div class="container container-right">
                        {{ message|trans|raw }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-{{ label }} progress-bar-alert" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}
{% endif %}
