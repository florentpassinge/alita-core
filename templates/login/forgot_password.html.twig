{% set bg_color = 'bg-gradient-login' %}
{% trans_default_domain 'form' %}
{% extends 'Layout/full-page.html.twig' %}

{% block head_title %}{{ 'form.title.forgotpassword'|trans }} - Alita{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
        <div class="col-lg-6">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">{{ 'form.title.forgotpassword'|trans }}</h1>
                </div>
                {{ form(form) }}
                <hr>
                <div class="text-center">
                    <a href="{{ path('alita_login') }}">{{ 'form.link.login' | trans() }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}