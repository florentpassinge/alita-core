{% if bg_color is not defined %}
    {%  set bg_color = 'bg-gradient-primary' %}
{% endif %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block head_title %}{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        {{ encore_entry_link_tags('console') }}
    {% endblock %}
</head>
<body class="{{ bg_color }}">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        {% block content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="animated animated-robot js-animate" id="alita-robot">
        <div class="animated-background">&nbsp;</div>
        <svg role="img" aria-hidden="true">
            <use xlink:href="#alita-robot-svg"></use>
        </svg>
    </div>
    <div id="modal" class="invisible">
        <div id="modal-container">
            <div id="modal-entete">
                <div id="modal-title"></div>
                <div id="modal-action">
                    <i class="fa fa-times-circle modal-close"></i>
                </div>
            </div>
            <div id="modal-content"></div>
        </div>
    </div>

    {% include '_blocks/alert/alert.html.twig' %}

    {% block javascript %}
        <script>
            {% if app.environment is same as ('dev') %}
                let alita_environment = '{{ app.environment }}';
            {% endif %}
        </script>
        {{ encore_entry_script_tags('console') }}
        {% include '_blocks/js/translate.html.twig' %}
    {% endblock %}
    {% include '_blocks/svg/all.html.twig' %}
</body>
</html>